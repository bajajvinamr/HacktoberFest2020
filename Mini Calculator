#include<stdio.h>

int main()
{
    char operator;
    float num1, num2;

    printf("Enter calculation ( Number Operator Number) : ");
    scanf("%f %c %f", &num1, &operator, &num2);

    switch(operator)
    {
        case '+': printf("Answer = %.2f ",num1+num2);
                break;

        case '-': printf("Answer = %.2f ",num1-num2);
                break;

        case '*': printf("Answer = %.2f ",num1*num2);
                break;

        case '/': printf("Answer = %.2f ",num1/num2);
                break;

        default: printf("Enter Valid operator!");
    }
    return 0;
}
